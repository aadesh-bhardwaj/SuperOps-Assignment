{
  "password_policy": {
    "minimum_length": 12,
    "require_uppercase": true,
    "require_lowercase": true,
    "require_numbers": true,
    "require_symbols": true,
    "max_age_days": 90,
    "password_reuse_prevention": 5,
    "hard_expiry": false
  },
  "mfa": {
    "required_for_groups": ["Administrators", "PowerUsers"],
    "grace_period_days": 7,
    "enforcement_policy": "strict"
  },
  "access_keys": {
    "max_age_days": 90,
    "auto_rotate": true,
    "max_keys_per_user": 2,
    "notify_before_expiry_days": 7
  },
  "groups": {
    "default_groups": ["ReadOnly"],
    "auto_create_groups": true
  },
  "notifications": {
    "email_enabled": false,
    "slack_enabled": false,
    "slack_webhook": "",
    "email_smtp_server": "",
    "email_from_address": ""
  },
  "compliance": {
    "require_tags": true,
    "required_tags": ["Department", "CostCenter", "Owner"],
    "audit_logging": true,
    "data_retention_days": 90
  }
}
